{
    "preset": "psr12",
    "rules": {
        "explicit_string_variable": true,
        "simple_to_complex_string_variable": true,
        "single_quote": true,
        "new_with_braces": {
            "anonymous_class": false
        },
        "curly_braces_position": {
            "anonymous_classes_opening_brace": "next_line_unless_newline_at_signature_end"
        }
    }
}
